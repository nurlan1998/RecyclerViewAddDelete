<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgPeople"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/user"
        android:layout_width="40dp"
        android:layout_marginTop="@dimen/layout_margin_standard_top"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/layout_margin_standard_start" />

    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintStart_toEndOf="@+id/imgPeople"
        android:text="Title"
        android:textStyle="bold"
        android:textColor="#29302E"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/layout_margin_standard_top"
        android:layout_marginLeft="@dimen/layout_margin_standard_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDescription"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="#29302E"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/imgPeople"
        android:layout_marginLeft="@dimen/layout_margin_standard_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/btnOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/layout_margin_standard_end"
        android:layout_marginTop="@dimen/layout_margin_standard_top"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:padding="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>